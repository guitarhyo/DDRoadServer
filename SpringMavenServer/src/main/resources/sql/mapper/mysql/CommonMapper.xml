<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CommonDao">

<select id="selectBoard" resultType="map">
	select * from board
</select>

<select id="selectById" resultType="int">
	select count(*) from users where id=#{id}
</select>

<insert id="join">
	INSERT INTO USERS VALUES (#{id}, #{email}, #{nickname},#{gender}, #{age})
</insert>

<insert id="write">
	INSERT INTO BOARD (title,writer,nickname,contents) VALUES (#{title}, #{writer}, #{nickname}, #{content});
	
</insert>
</mapper>